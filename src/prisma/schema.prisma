generator client {
  provider   = "prisma-client"
  output     = "./src/generated/prisma"
  engineType = "classic"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  username String     @unique
  password String
  admin    Admin
  Playist  PlayList[]
  Song     Song[]
}

enum Admin {
  Admin
  User
}

model Song {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  album     String?
  creator   Int
  user      User      @relation(fields: [creator], references: [id])
  songPath  String
  Playist   PlayList? @relation(fields: [playistId], references: [id])
  playistId Int?
}

model PlayList {
  id      Int    @id @default(autoincrement())
  name    String @unique
  creator Int
  user    User   @relation(fields: [creator], references: [id])
  songs   Song[]
}
